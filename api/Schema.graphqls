schema {
    query: Query
}

type Query {
    me: User
    users: [User]
}

type User {
    id: ID!
    name: String!
    email: String!

    friends(offset: Int = 0, count: Int = 10): [User]
    photos(offset: Int = 0, count: Int = 10): [Photo]
}

type Photo {
    id: ID!
    src: String!
    owner: User!

    comments(offset: Int = 0, count: Int = 10): [Comment]
}


type Comment {
    id: ID!
    text: String!
}
