schema {
    query: Query
}

type Query {
    me: User
    users: [User]
}

type User {
    id: ID!
    name: String!
    email: String!

    friends(offset: Int = 0, count: Int = 10): [User]
    comments: [Comment]
    photos(offset: Int = 0, count: Int = 10): [Photo]
}

type Comment {
    id: ID!
    text: String!
}

type Photo {
    id: ID!
    src: String!
    owner: User!
}
